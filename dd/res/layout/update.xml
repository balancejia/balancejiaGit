<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Bike_uapdateItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/opinion_linear_margin"
    android:layout_marginRight="@dimen/opinion_linear_margin"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="280.0dip"
        android:layout_height="wrap_content"
        android:background="#2a3c10" >

        <LinearLayout
            android:id="@+id/alter_top"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/close_margin"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/update_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/alter_warning" />

            <TextView
                android:id="@+id/update_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/close_margin"
                android:text="@string/have_update"
                android:textSize="@dimen/common_text_middle_size" />
        </LinearLayout>

        <View
            android:id="@+id/alter_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/alter_top"
            android:background="@drawable/alter_line" />
        
        <TextView
            android:id="@+id/version_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/have_new_version"
            android:layout_below="@id/alter_line"
            android:textSize="18dp"
            android:padding="8dp" />

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/version_content"
            android:layout_margin="12dp"/>

        <RelativeLayout
            android:id="@+id/alter_bottom"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/progressBar1"
            android:layout_margin="10.0dip"
            android:background="@drawable/apk_gengxin"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/close_app"
                android:layout_width="80dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5.0dp"
                >

                <TextView
                    android:id="@+id/do_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15.0dp"
                    android:text="@string/que_ren"
                    android:textColor="#f0ffdc"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cancle"
                android:layout_width="55dip"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5.0dp"
            	 >

                <TextView
                    android:id="@+id/b_cancel_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10.0dp"
                    android:text="@string/qu_xiao"
                    android:textColor="#f0ffdc"
                    android:textSize="18dp"
                    />
            </LinearLayout>
        </RelativeLayout>



    </RelativeLayout>

</LinearLayout>