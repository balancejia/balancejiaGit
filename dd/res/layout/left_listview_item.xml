<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/left_listview_item_bg" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/left_item_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/left_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:textSize="16sp"
            android:textColor="#767676"/>
       <TextView
            android:id="@+id/left_item_synchron_count"
            android:layout_width="@dimen/synchron_width"
            android:layout_height="@dimen/synchron_height"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:background="@drawable/count_bg"
            android:textSize="12dp"
            android:gravity="center" 
            android:textColor="#238401"
            android:visibility="gone"/>
    </LinearLayout>
    <View android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#d1d5cd"/>
     <View android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffffff"/>

</LinearLayout>